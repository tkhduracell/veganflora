{
  "hosting": {
    "public": "webapp/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "predeploy": [
      "pnpm --filter ...webapp build"
    ]
  },
  "functions": {
    "predeploy": [
      "pnpm --filter ...functions build"
    ],
    "ignore": [
      ".git",
      ".env",
      ".runtimeconfig.json",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "node_modules",
      "scripts"
    ]
  }
}